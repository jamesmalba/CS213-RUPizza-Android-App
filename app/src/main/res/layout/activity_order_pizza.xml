<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/pizza_price_textview"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/current_order_total"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <CheckBox
        android:id="@+id/mushroom_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_mushroom"
        app:layout_constraintBottom_toTopOf="@+id/pineapple_topping_checkbox"
        app:layout_constraintEnd_toStartOf="@+id/green_pepper_topping_checkbox"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/sausage_topping_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/pepperoni_topping_checkbox"
        app:layout_constraintVertical_bias="0.188" />

    <CheckBox
        android:id="@+id/cheddar_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_cheddar"
        app:layout_constraintBottom_toTopOf="@+id/pineapple_topping_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mushroom_topping_checkbox"
        app:layout_constraintVertical_bias="0.448" />

    <CheckBox
        android:id="@+id/pineapple_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:text="@string/order_pineapple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinach_topping_checkbox"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/black_olives_topping_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/provolone_topping_checkbox"
        app:layout_constraintVertical_bias="0.048" />

    <CheckBox
        android:id="@+id/bbq_chicken_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_BBQ"
        app:layout_constraintBottom_toTopOf="@+id/cheddar_topping_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toEndOf="@+id/mushroom_topping_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/green_pepper_topping_checkbox" />

    <CheckBox
        android:id="@+id/beef_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp"
        android:text="@string/order_beef"
        app:layout_constraintBottom_toTopOf="@+id/spinach_topping_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toEndOf="@+id/mushroom_topping_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/bbq_chicken_topping_checkbox"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/spinach_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_spinach"
        app:layout_constraintBottom_toTopOf="@+id/ham_topping_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toEndOf="@+id/mushroom_topping_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/cheddar_topping_checkbox"
        app:layout_constraintVertical_bias="0.529" />

    <CheckBox
        android:id="@+id/ham_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_Ham"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green_pepper_topping_checkbox"
        app:layout_constraintVertical_bias="0.74" />

    <CheckBox
        android:id="@+id/onion_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="224dp"
        android:text="@string/order_onion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mushroom_topping_checkbox"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pizza_order_imageview"
        app:layout_constraintVertical_bias="0.727" />

    <CheckBox
        android:id="@+id/provolone_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/order_provolone"
        app:layout_constraintBottom_toTopOf="@+id/ham_topping_checkbox"
        app:layout_constraintEnd_toStartOf="@+id/mushroom_topping_checkbox"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onion_topping_checkbox"
        app:layout_constraintVertical_bias="0.069" />

    <CheckBox
        android:id="@+id/black_olives_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_black"
        app:layout_constraintBottom_toTopOf="@+id/bacon_topping_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/provolone_topping_checkbox"
        app:layout_constraintVertical_bias="0.515" />

    <CheckBox
        android:id="@+id/bacon_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:text="@string/order_bacon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ham_topping_checkbox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pineapple_topping_checkbox"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/sausage_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/order_sausage"
        app:layout_constraintBottom_toTopOf="@+id/onion_topping_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

    <CheckBox
        android:id="@+id/pepperoni_topping_checkbox"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:text="@string/order_pepperoni"
        app:layout_constraintBottom_toTopOf="@+id/onion_topping_checkbox"
        app:layout_constraintEnd_toStartOf="@+id/green_pepper_topping_checkbox"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toEndOf="@+id/sausage_topping_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.733" />

    <TextView
        android:id="@+id/pizza_order_textview"
        android:layout_width="385dp"
        android:layout_height="59dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/pizza_order_imageview"
        android:layout_width="183dp"
        android:layout_height="240dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pizza_order_textview"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="73dp"
        android:layout_height="30dp"
        android:layout_marginTop="39dp"
        android:text="@string/order_crust"
        android:textColor="#0B0A0A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toEndOf="@+id/pizza_order_imageview"
        app:layout_constraintTop_toBottomOf="@+id/pizza_order_textview" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="@string/order_size"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toEndOf="@+id/pizza_order_imageview"
        app:layout_constraintTop_toBottomOf="@+id/pizza_crust_textview" />

    <EditText
        android:id="@+id/pizza_crust_textview"
        android:layout_width="166dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:clickable="false"
        android:cursorVisible="true"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:text="@string/order_crust_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toEndOf="@+id/pizza_order_imageview"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/size_picker_spinner"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toEndOf="@+id/pizza_order_imageview"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/green_pepper_topping_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="@string/order_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/sausage_topping_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/size_picker_spinner"
        app:layout_constraintVertical_bias="0.196" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="133dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text="@string/order_toppings"
        android:textColor="#131313"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sausage_topping_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pizza_order_imageview"
        app:layout_constraintVertical_bias="0.185" />

    <Button
        android:id="@+id/place_order_button"
        android:layout_width="127dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/order_place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="111dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/order_price"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>