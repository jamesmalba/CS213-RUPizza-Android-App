<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/mushroom_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUSHROOM"
        app:layout_constraintBottom_toTopOf="@+id/pineapple_topping"
        app:layout_constraintEnd_toStartOf="@+id/green_pepper_topping"
        app:layout_constraintStart_toEndOf="@+id/sausage_topping"
        app:layout_constraintTop_toBottomOf="@+id/pepperoni_topping"
        app:layout_constraintVertical_bias="0.134" />

    <CheckBox
        android:id="@+id/cheddar_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHEDDAR"
        app:layout_constraintBottom_toTopOf="@+id/pineapple_topping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mushroom_topping"
        app:layout_constraintVertical_bias="0.448" />

    <CheckBox
        android:id="@+id/pineapple_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:text="PINEAPPLE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinach_topping"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/black_olives_topping"
        app:layout_constraintTop_toBottomOf="@+id/provolone_topping"
        app:layout_constraintVertical_bias="0.048" />

    <CheckBox
        android:id="@+id/bbq_chicken_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BBQ_CHICKEN"
        app:layout_constraintBottom_toTopOf="@+id/cheddar_topping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toEndOf="@+id/mushroom_topping"
        app:layout_constraintTop_toBottomOf="@+id/green_pepper_topping" />

    <CheckBox
        android:id="@+id/beef_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp"
        android:text="BEEF"
        app:layout_constraintBottom_toTopOf="@+id/spinach_topping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toEndOf="@+id/mushroom_topping"
        app:layout_constraintTop_toBottomOf="@+id/bbq_chicken_topping"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/spinach_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPINACH"
        app:layout_constraintBottom_toTopOf="@+id/ham_topping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toEndOf="@+id/mushroom_topping"
        app:layout_constraintTop_toBottomOf="@+id/cheddar_topping"
        app:layout_constraintVertical_bias="0.529" />

    <CheckBox
        android:id="@+id/ham_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green_pepper_topping"
        app:layout_constraintVertical_bias="0.855" />

    <CheckBox
        android:id="@+id/onion_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="224dp"
        android:text="ONION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mushroom_topping"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pizza_order_image"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/provolone_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="PROVOLONE"
        app:layout_constraintBottom_toTopOf="@+id/ham_topping"
        app:layout_constraintEnd_toStartOf="@+id/mushroom_topping"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onion_topping"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/black_olives_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLACK_OLIVES"
        app:layout_constraintBottom_toTopOf="@+id/bacon_topping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/provolone_topping"
        app:layout_constraintVertical_bias="0.593" />

    <CheckBox
        android:id="@+id/bacon_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="12dp"
        android:text="BACON"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ham_topping"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pineapple_topping"
        app:layout_constraintVertical_bias="0.023" />

    <CheckBox
        android:id="@+id/sausage_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAUSAGE"
        app:layout_constraintBottom_toTopOf="@+id/onion_topping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <CheckBox
        android:id="@+id/pepperoni_topping"
        android:layout_width="113dp"
        android:layout_height="50dp"
        android:text="PEPPERONI"
        app:layout_constraintBottom_toTopOf="@+id/onion_topping"
        app:layout_constraintEnd_toStartOf="@+id/green_pepper_topping"
        app:layout_constraintStart_toEndOf="@+id/sausage_topping"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/pizza_order_text"
        android:layout_width="385dp"
        android:layout_height="59dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageView
        android:id="@+id/pizza_order_image"
        android:layout_width="183dp"
        android:layout_height="240dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pizza_order_text"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="73dp"
        android:layout_height="30dp"
        android:layout_marginTop="39dp"
        android:text="Crust : "
        android:textColor="#0B0A0A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toEndOf="@+id/pizza_order_image"
        app:layout_constraintTop_toBottomOf="@+id/pizza_order_text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="Size:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toEndOf="@+id/pizza_order_image"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="166dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Crust Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toEndOf="@+id/pizza_order_image"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/size_picker"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toEndOf="@+id/pizza_order_image"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/green_pepper_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="GREEN_PEPPER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/sausage_topping"
        app:layout_constraintTop_toBottomOf="@+id/size_picker"
        app:layout_constraintVertical_bias="0.246" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="133dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:text="Toppings:"
        android:textColor="#131313"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sausage_topping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pizza_order_image" />

</androidx.constraintlayout.widget.ConstraintLayout>